@* ReSharper disable InconsistentNaming *@

@code {
	/// <summary>
	/// Default render fragment used when routing hits a vault Note.
	/// </summary>
	/// <param name="ctx">The render context.</param>
	/// <returns>A default render fragment, which simply renders the note's content inside a <c>article</c> element.</returns>
	public static RenderFragment Render(FoundNoteRenderContext ctx) => __builder =>
	{
		<article name="@ctx.Note.Name">
			<RenderNoteContent Note="@ctx.Note" Converter="ctx.DisplayOptions.Converter" />
		</article>
	};

	/// <summary>
	/// Render context for a found vault Note.
	/// </summary>
	/// <param name="Note">The vault Note to render.</param>
	/// <param name="DisplayOptions">The display options to use when rendering the note.</param>
	public record FoundNoteRenderContext(IVaultNote Note, ObsidianVaultDisplayOptions DisplayOptions) : TemplateRenderContextBase(DisplayOptions);

}